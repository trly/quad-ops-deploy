pki.localhost {
    reverse_proxy https://pki:9000 {
        transport http {
            tls_insecure_skip_verify
        }
    }
}

ai.localhost {
    reverse_proxy open-webui:8080
}

drop.localhost {
    reverse_proxy pairdrop-app:3000
}

keycloak.localhost {
    reverse_proxy https://keycloak:8443 {
        transport http {
            tls_insecure_skip_verify
        }
    }
}

*.localhost {
  tls {
    ca http://pki:9000/acme/acme-localhost/directory
  }
  respond "Quad-Ops Managed Local Proxy"
}